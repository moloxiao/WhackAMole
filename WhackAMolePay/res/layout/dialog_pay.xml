<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pay_appui_ll"
    android:layout_width="301dp"
    android:layout_height="280dp"
    android:layout_gravity="center"
     >
    <RelativeLayout
        android:id="@+id/pay_bg_out"
        android:layout_width="301dp"
        android:layout_height="280dp"
        android:layout_centerInParent="true" > 
    
	    <RelativeLayout
	        android:id="@+id/pay_bg"
	        android:layout_width="291dp"
	        android:layout_height="270dp"
	        android:layout_centerInParent="true"
	        android:background="@drawable/pay_bg" >  	          
	        
	        <ImageView
	            android:id="@+id/pay_title"
	            android:layout_width="120dp"
	            android:layout_height="39dp"
	            android:layout_centerHorizontal="true"
	            android:layout_marginTop="-2dp"
				android:background="@drawable/pay_title" /> 
				
	        <ImageView
	            android:id="@+id/pay_tip2"
	            android:layout_width="253dp"
	            android:layout_height="28dp"
	            android:layout_alignParentBottom="true"
	            android:layout_marginBottom="90dp"
	            android:layout_centerHorizontal="true"
	            android:background="@drawable/pay_tip_sky"/>
	
	        <ImageView
	            android:id="@+id/pay_tip1"
	            android:layout_width="259dp"
	            android:layout_height="81dp"
	            android:layout_centerHorizontal="true"
	            android:layout_alignParentTop="true"
	            android:layout_marginTop="63dp"
	            android:background="@drawable/pay_tip_goods_1" />
	        
	        <ImageView
	            android:id="@+id/revive_num"
	            android:layout_width="19dp"
	            android:layout_height="18dp"	            
	            android:layout_alignParentTop="true"
	            android:layout_alignParentLeft="true"
	            android:layout_marginTop="58dp"
	            android:layout_marginLeft="110dp"
	            android:visibility="invisible"
	            android:background="@drawable/night_fight_num_1" />
			
	         <ImageButton
		        android:id="@+id/pay_confirm"
		        android:layout_width="130dp"
		        android:layout_height="52dp"
		        android:layout_centerHorizontal="true"
		        android:layout_alignParentBottom="true"
		        android:layout_marginBottom="23dp"
		        android:background="@drawable/pay_confirm_up" />
	
	    </RelativeLayout>	 
	
        <ImageButton
            android:id="@+id/pay_cancel"
            android:layout_width="39dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/pay_cancel_up" />
    </RelativeLayout>
</RelativeLayout>